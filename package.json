{
  "name": "vitals",
  "displayName": "Vitals",
  "description": "Monitor application metrics and logs in real-time within Visual Studio Code.",
  "version": "0.3.1",
  "publisher": "theaniketraj",
  "repository": {
    "type": "git",
    "url": "https://github.com/theaniketraj/vitals.git"
  },
  "bugs": {
    "url": "https://github.com/theaniketraj/vitals/issues"
  },
  "homepage": "https://theaniketraj.github.io/vitals/",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Programming Languages",
    "Visualization",
    "Other"
  ],
  "keywords": [
    "vitals",
    "observability",
    "metrics",
    "logs",
    "dashboard",
    "prometheus"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vitals.openDashboard",
        "title": "Open Vitals Dashboard",
        "category": "Vitals"
      },
      {
        "command": "vitals.signIn",
        "title": "Sign In with GitHub",
        "category": "Vitals"
      },
      {
        "command": "vitals.signOut",
        "title": "Sign Out from GitHub",
        "category": "Vitals"
      },
      {
        "command": "vitals.showStatus",
        "title": "Show Authentication Status",
        "category": "Vitals"
      },
      {
        "command": "vitals.configurePrometheus",
        "title": "Configure Prometheus URL",
        "category": "Vitals"
      },
      {
        "command": "vitals.configureCloudProvider",
        "title": "Configure Cloud Provider",
        "category": "Vitals",
        "icon": "$(cloud)"
      },
      {
        "command": "vitals.viewCostMetrics",
        "title": "View Cost Metrics",
        "category": "Vitals",
        "icon": "$(graph)"
      },
      {
        "command": "vitals.configureTraceProvider",
        "title": "Configure Trace Provider",
        "category": "Vitals",
        "icon": "$(symbol-event)"
      },
      {
        "command": "vitals.searchTraces",
        "title": "Search Traces",
        "category": "Vitals",
        "icon": "$(search)"
      },
      {
        "command": "vitals.viewServiceMap",
        "title": "View Service Dependency Map",
        "category": "Vitals",
        "icon": "$(graph-scatter)"
      },
      {
        "command": "vitals.analyzePerformance",
        "title": "Analyze Performance",
        "category": "Vitals",
        "icon": "$(pulse)"
      },
      {
        "command": "vitals.detectRegressions",
        "title": "Detect Performance Regressions",
        "category": "Vitals",
        "icon": "$(warning)"
      },
      {
        "command": "vitals.createIncident",
        "title": "Create Incident",
        "category": "Vitals",
        "icon": "$(alert)"
      },
      {
        "command": "vitals.showIncident",
        "title": "Show Incident Details",
        "category": "Vitals",
        "icon": "$(info)"
      },
      {
        "command": "vitals.executeRunbook",
        "title": "Execute Runbook",
        "category": "Vitals",
        "icon": "$(play)"
      },
      {
        "command": "vitals.generatePostMortem",
        "title": "Generate Post-Mortem",
        "category": "Vitals",
        "icon": "$(note)"
      },
      {
        "command": "vitals.showOnCallSchedule",
        "title": "Show On-Call Schedule",
        "category": "Vitals",
        "icon": "$(calendar)"
      },
      {
        "command": "vitals.configureIntegration",
        "title": "Configure Incident Integration",
        "category": "Vitals",
        "icon": "$(plug)"
      },
      {
        "command": "vitals.addIncidentAnnotation",
        "title": "Add Incident Annotation",
        "category": "Vitals",
        "icon": "$(comment)"
      },
      {
        "command": "vitals.addIncidentHypothesis",
        "title": "Add Incident Hypothesis",
        "category": "Vitals",
        "icon": "$(lightbulb)"
      },
      {
        "command": "vitals.trackDeployment",
        "title": "Track Deployment",
        "category": "Vitals CI/CD",
        "icon": "$(rocket)"
      },
      {
        "command": "vitals.viewDeployments",
        "title": "View Deployments",
        "category": "Vitals CI/CD",
        "icon": "$(list-unordered)"
      },
      {
        "command": "vitals.analyzeDeploymentImpact",
        "title": "Analyze Deployment Impact",
        "category": "Vitals CI/CD",
        "icon": "$(graph)"
      },
      {
        "command": "vitals.rollbackDeployment",
        "title": "Rollback Deployment",
        "category": "Vitals CI/CD",
        "icon": "$(debug-reverse-continue)"
      },
      {
        "command": "vitals.viewBuildTrends",
        "title": "View Build Trends",
        "category": "Vitals CI/CD",
        "icon": "$(graph-line)"
      },
      {
        "command": "vitals.viewFlakyTests",
        "title": "View Flaky Tests",
        "category": "Vitals CI/CD",
        "icon": "$(beaker)"
      },
      {
        "command": "vitals.connectFeatureFlagProvider",
        "title": "Connect Feature Flag Provider",
        "category": "Vitals CI/CD",
        "icon": "$(plug)"
      },
      {
        "command": "vitals.analyzeFlagImpact",
        "title": "Analyze Feature Flag Impact",
        "category": "Vitals CI/CD",
        "icon": "$(pulse)"
      },
      {
        "command": "vitals.generateReleaseNotes",
        "title": "Generate Release Notes",
        "category": "Vitals CI/CD",
        "icon": "$(note)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "vitals-sidebar",
          "title": "Vitals",
          "icon": "icon.png"
        }
      ]
    },
    "views": {
      "vitals-sidebar": [
        {
          "type": "webview",
          "id": "vitals.dashboardView",
          "name": "Dashboard",
          "icon": "icon.png"
        }
      ]
    },
    "configuration": {
      "title": "Vitals",
      "properties": {
        "vitals.prometheusUrl": {
          "type": "string",
          "default": "https://prometheus.demo.do.prometheus.io:9090",
          "description": "URL of the Prometheus server. Leave as default to use the demo instance (pre-populated with sample metrics), or change to your own Prometheus URL.",
          "markdownDescription": "URL of the Prometheus server.\n\n**Demo Mode** (default): Uses a hosted demo instance with sample metrics - perfect for trying Vitals.\n\n**Custom Mode**: Enter your own Prometheus URL (e.g., `http://localhost:9090`) to monitor your applications.\n\n[Learn more about Prometheus setup](https://github.com/theaniketraj/vitals/blob/main/PROMETHEUS_SETUP.md)"
        },
        "vitals.enableTelemetry": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "Enable anonymous usage statistics collection to help improve Vitals. \n\n[Learn more](https://github.com/theaniketraj/vitals/blob/main/PRIVACY.md)"
        },
        "vitals.telemetrySaveInterval": {
          "type": "number",
          "default": 5,
          "minimum": 1,
          "maximum": 60,
          "description": "Interval in minutes to save usage statistics (default: 5 minutes)."
        },
        "vitals.customQueries": {
          "type": "array",
          "default": [],
          "description": "List of custom PromQL queries to monitor.",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Display name for the query"
              },
              "query": {
                "type": "string",
                "description": "PromQL query"
              }
            }
          }
        },
        "vitals.alertmanagerUrl": {
          "type": "string",
          "description": "URL of the Alertmanager server.",
          "default": "http://localhost:9093"
        },
        "vitals.lokiUrl": {
          "type": "string",
          "description": "URL of the Loki server.",
          "default": "http://localhost:3100"
        },
        "vitals.logQuery": {
          "type": "string",
          "description": "Default LogQL query to fetch logs.",
          "default": "{job=\"varlogs\"}"
        },
        "vitals.cloudProviders": {
          "type": "array",
          "default": [],
          "description": "List of enabled cloud providers (managed internally)",
          "items": {
            "type": "string"
          }
        },
        "vitals.enableCostTracking": {
          "type": "boolean",
          "default": true,
          "description": "Enable cost tracking across cloud providers"
        },
        "vitals.costAlertThreshold": {
          "type": "number",
          "default": 1000,
          "description": "Alert when monthly costs exceed this amount (USD)"
        },
        "vitals.incidentIntegrations": {
          "type": "object",
          "default": {},
          "description": "Configuration for incident management integrations",
          "properties": {
            "pagerduty": {
              "type": "object",
              "properties": {
                "enabled": {
                  "type": "boolean"
                },
                "serviceId": {
                  "type": "string"
                }
              }
            },
            "slack": {
              "type": "object",
              "properties": {
                "enabled": {
                  "type": "boolean"
                },
                "channel": {
                  "type": "string"
                }
              }
            },
            "teams": {
              "type": "object",
              "properties": {
                "enabled": {
                  "type": "boolean"
                }
              }
            }
          }
        },
        "vitals.enableIncidentManagement": {
          "type": "boolean",
          "default": true,
          "description": "Enable incident management features"
        },
        "vitals.runbookAutoExecute": {
          "type": "boolean",
          "default": false,
          "description": "Automatically execute runbooks when incidents are detected"
        },
        "vitals.postMortemTemplate": {
          "type": "string",
          "enum": [
            "standard",
            "detailed",
            "minimal"
          ],
          "default": "standard",
          "description": "Post-mortem document template style"
        },
        "vitals.onCallNotifications": {
          "type": "boolean",
          "default": true,
          "description": "Show VS Code notifications when on-call"
        },
        "vitals.enableCICDIntegration": {
          "type": "boolean",
          "default": true,
          "description": "Enable CI/CD integration features"
        },
        "vitals.cicdPlatform": {
          "type": "string",
          "enum": [
            "github_actions",
            "gitlab_ci",
            "jenkins",
            "circleci",
            "azure_devops"
          ],
          "default": "github_actions",
          "description": "CI/CD platform integration"
        },
        "vitals.deploymentDetection": {
          "type": "object",
          "default": {
            "useGitTags": true,
            "tagPattern": "^v\\d+\\.\\d+\\.\\d+$",
            "useCIWebhooks": false
          },
          "description": "Deployment detection configuration"
        },
        "vitals.performanceAnalysisWindow": {
          "type": "number",
          "default": 30,
          "description": "Time window for deployment performance analysis (minutes)"
        },
        "vitals.regressionThreshold": {
          "type": "number",
          "default": 10,
          "description": "Percent change to trigger regression alert"
        },
        "vitals.autoRollbackEnabled": {
          "type": "boolean",
          "default": false,
          "description": "Automatically rollback on critical regressions"
        },
        "vitals.featureFlagProvider": {
          "type": "string",
          "enum": [
            "launchdarkly",
            "splitio",
            "unleash",
            "none"
          ],
          "default": "none",
          "description": "Feature flag provider integration"
        },
        "vitals.traceProvider": {
          "type": "string",
          "enum": [
            "jaeger",
            "opentelemetry"
          ],
          "default": "jaeger",
          "description": "Active distributed tracing provider"
        },
        "vitals.traceEndpoint": {
          "type": "string",
          "default": "http://localhost:16686",
          "description": "Endpoint URL for the trace provider"
        },
        "vitals.enableCodeLensAnnotations": {
          "type": "boolean",
          "default": true,
          "description": "Show inline performance annotations in code editor"
        },
        "vitals.performanceThreshold": {
          "type": "number",
          "default": 5,
          "description": "Minimum percentage of execution time for hot path highlighting"
        },
        "vitals.enableAutoTracing": {
          "type": "boolean",
          "default": false,
          "description": "Automatically analyze traces when opening a project"
        }
      }
    }
  },
  "scripts": {
    "build": "npm-run-all build:extension build:webview",
    "build:extension": "webpack --config webpack.config.js",
    "build:webview": "webpack --config webpack.config.webview.js",
    "watch": "npm-run-all --parallel watch:extension watch:webview",
    "watch:extension": "webpack --watch --config webpack.config.js",
    "watch:webview": "webpack --watch --config webpack.config.webview.js",
    "vscode:prepublish": "npm run build",
    "test": "jest",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "dependencies": {
    "@aws-sdk/client-cloudwatch": "^3.980.0",
    "@aws-sdk/client-xray": "^3.980.0",
    "@fortawesome/fontawesome-free": "^7.2.0",
    "@observablehq/plot": "^0.6.17",
    "axios": "^1.13.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.29.0",
    "@babel/preset-react": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@types/jest": "^30.0.0",
    "@types/mocha": "^10.0.10",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/vscode": "^1.108.1",
    "babel-loader": "^10.0.0",
    "css-loader": "^7.1.3",
    "jest": "^30.2.0",
    "mermaid": "^11.12.2",
    "npm-run-all": "^4.1.5",
    "postcss-loader": "^8.2.0",
    "style-loader": "^4.0.0",
    "ts-jest": "^29.4.6",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "vitepress": "^1.6.4",
    "vitepress-plugin-mermaid": "^2.0.17",
    "vscode-test": "^0.4.3",
    "vue": "^3.5.27",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1"
  }
}
