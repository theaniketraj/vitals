{
  "name": "vitals",
  "displayName": "Vitals",
  "description": "Monitor application metrics and logs in real-time within Visual Studio Code.",
  "version": "0.3.0",
  "publisher": "theaniketraj",
  "repository": {
    "type": "git",
    "url": "https://github.com/theaniketraj/vitals.git"
  },
  "bugs": {
    "url": "https://github.com/theaniketraj/vitals/issues"
  },
  "homepage": "https://theaniketraj.github.io/vitals/",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Programming Languages",
    "Visualization",
    "Other"
  ],
  "keywords": [
    "vitals",
    "observability",
    "metrics",
    "logs",
    "dashboard",
    "prometheus"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vitals.openDashboard",
        "title": "Open Vitals Dashboard",
        "category": "Vitals"
      },
      {
        "command": "vitals.signIn",
        "title": "Sign In with GitHub",
        "category": "Vitals"
      },
      {
        "command": "vitals.signOut",
        "title": "Sign Out from GitHub",
        "category": "Vitals"
      },
      {
        "command": "vitals.showStatus",
        "title": "Show Authentication Status",
        "category": "Vitals"
      },
      {
        "command": "vitals.configurePrometheus",
        "title": "Configure Prometheus URL",
        "category": "Vitals"
      },
      {
        "command": "vitals.configureCloudProvider",
        "title": "Configure Cloud Provider",
        "category": "Vitals",
        "icon": "$(cloud)"
      },
      {
        "command": "vitals.viewCostMetrics",
        "title": "View Cost Metrics",
        "category": "Vitals",
        "icon": "$(graph)"
      },
      {
        "command": "vitals.configureTraceProvider",
        "title": "Configure Trace Provider",
        "category": "Vitals",
        "icon": "$(symbol-event)"
      },
      {
        "command": "vitals.searchTraces",
        "title": "Search Traces",
        "category": "Vitals",
        "icon": "$(search)"
      },
      {
        "command": "vitals.viewServiceMap",
        "title": "View Service Dependency Map",
        "category": "Vitals",
        "icon": "$(graph-scatter)"
      },
      {
        "command": "vitals.analyzePerformance",
        "title": "Analyze Performance",
        "category": "Vitals",
        "icon": "$(pulse)"
      },
      {
        "command": "vitals.detectRegressions",
        "title": "Detect Performance Regressions",
        "category": "Vitals",
        "icon": "$(warning)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "vitals-sidebar",
          "title": "Vitals",
          "icon": "icon.png"
        }
      ]
    },
    "views": {
      "vitals-sidebar": [
        {
          "type": "webview",
          "id": "vitals.dashboardView",
          "name": "Dashboard",
          "icon": "icon.png"
        }
      ]
    },
    "configuration": {
      "title": "Vitals",
      "properties": {
        "vitals.prometheusUrl": {
          "type": "string",
          "default": "https://prometheus.demo.do.prometheus.io:9090",
          "description": "URL of the Prometheus server. Leave as default to use the demo instance (pre-populated with sample metrics), or change to your own Prometheus URL.",
          "markdownDescription": "URL of the Prometheus server.\n\n**Demo Mode** (default): Uses a hosted demo instance with sample metrics - perfect for trying Vitals.\n\n**Custom Mode**: Enter your own Prometheus URL (e.g., `http://localhost:9090`) to monitor your applications.\n\n[Learn more about Prometheus setup](https://github.com/theaniketraj/vitals/blob/main/PROMETHEUS_SETUP.md)"
        },
        "vitals.enableTelemetry": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "Enable anonymous usage statistics collection to help improve Vitals. \n\n[Learn more](https://github.com/theaniketraj/vitals/blob/main/PRIVACY.md)"
        },
        "vitals.telemetrySaveInterval": {
          "type": "number",
          "default": 5,
          "minimum": 1,
          "maximum": 60,
          "description": "Interval in minutes to save usage statistics (default: 5 minutes)."
        },
        "vitals.customQueries": {
          "type": "array",
          "default": [],
          "description": "List of custom PromQL queries to monitor.",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Display name for the query"
              },
              "query": {
                "type": "string",
                "description": "PromQL query"
              }
            }
          }
        },
        "vitals.alertmanagerUrl": {
          "type": "string",
          "description": "URL of the Alertmanager server.",
          "default": "http://localhost:9093"
        },
        "vitals.lokiUrl": {
          "type": "string",
          "description": "URL of the Loki server.",
          "default": "http://localhost:3100"
        },
        "vitals.logQuery": {
          "type": "string",
          "description": "Default LogQL query to fetch logs.",
          "default": "{job=\"varlogs\"}"
        },
        "vitals.cloudProviders": {
          "type": "array",
          "default": [],
          "description": "List of enabled cloud providers (managed internally)",
          "items": {
            "type": "string"
          }
        },
        "vitals.enableCostTracking": {
          "type": "boolean",
          "default": true,
          "description": "Enable cost tracking across cloud providers"
        },
        "vitals.costAlertThreshold": {
          "type": "number",
          "default": 1000,
          "description": "Alert when monthly costs exceed this amount (USD)"
        },
        "vitals.traceProvider": {
          "type": "string",
          "enum": ["jaeger", "opentelemetry"],
          "default": "jaeger",
          "description": "Active distributed tracing provider"
        },
        "vitals.traceEndpoint": {
          "type": "string",
          "default": "http://localhost:16686",
          "description": "Endpoint URL for the trace provider"
        },
        "vitals.enableCodeLensAnnotations": {
          "type": "boolean",
          "default": true,
          "description": "Show inline performance annotations in code editor"
        },
        "vitals.performanceThreshold": {
          "type": "number",
          "default": 5,
          "description": "Minimum percentage of execution time for hot path highlighting"
        },
        "vitals.enableAutoTracing": {
          "type": "boolean",
          "default": false,
          "description": "Automatically analyze traces when opening a project"
        },
        "vitals.alertmanagerUrl": {
          "type": "string",
          "description": "URL of the Alertmanager server.",
          "default": "http://localhost:9093"
        },
        "vitals.lokiUrl": {
          "type": "string",
          "description": "URL of the Loki server.",
          "default": "http://localhost:3100"
        },
        "vitals.logQuery": {
          "type": "string",
          "description": "Default LogQL query to fetch logs.",
          "default": "{job=\"varlogs\"}"
        },
        "vitals.cloudProviders": {
          "type": "array",
          "default": [],
          "description": "List of enabled cloud providers (managed internally)",
          "items": {
            "type": "string"
          }
        },
        "vitals.enableCostTracking": {
          "type": "boolean",
          "default": true,
          "description": "Enable cost tracking across cloud providers"
        },
        "vitals.costAlertThreshold": {
          "type": "number",
          "default": 1000,
          "description": "Alert when monthly costs exceed this amount (USD)"
        }
      }
    }
  },
  "scripts": {
    "build": "npm-run-all build:extension build:webview",
    "build:extension": "webpack --config webpack.config.js",
    "build:webview": "webpack --config webpack.config.webview.js",
    "watch": "npm-run-all --parallel watch:extension watch:webview",
    "watch:extension": "webpack --watch --config webpack.config.js",
    "watch:webview": "webpack --watch --config webpack.config.webview.js",
    "vscode:prepublish": "npm run build",
    "test": "jest",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "dependencies": {
    "@observablehq/plot": "^0.6.17",
    "axios": "^1.7.7",
    "react-dom": "^18.3.1",
    "@aws-sdk/client-cloudwatch": "^3.0.0",
    "@aws-sdk/client-xray": "^3.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.27.4",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@types/jest": "^29.5.14",
    "@types/mocha": "^10.0.10",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.2.25",
    "@types/vscode": "^1.94.0",
    "babel-loader": "^10.0.0",
    "css-loader": "^7.1.2",
    "jest": "^29.7.0",
    "mermaid": "^11.12.2",
    "npm-run-all": "^4.1.5",
    "postcss-loader": "^7.1.2",
    "style-loader": "^4.0.0",
    "ts-jest": "^29.4.5",
    "ts-loader": "^9.5.1",
    "typescript": "^5.6.3",
    "vitepress": "^1.6.4",
    "vitepress-plugin-mermaid": "^2.0.17",
    "vscode-test": "^0.4.3",
    "vue": "^3.5.25",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4"
  }
}